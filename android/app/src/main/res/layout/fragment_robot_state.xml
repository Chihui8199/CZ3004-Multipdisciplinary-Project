<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/robot_state_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RobotStateFragment">

    <TextView
        android:id="@+id/robot_x_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/robot_x_state"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_columnSpan="1"
        style="@style/textDisplay" />

    <TextView
        android:id="@+id/robot_y_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/robot_y_state"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_columnSpan="1"
        style="@style/textDisplay" />

    <TextView
        android:id="@+id/robot_direction_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/robot_direction_state"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        style="@style/textDisplay" />

</GridLayout>